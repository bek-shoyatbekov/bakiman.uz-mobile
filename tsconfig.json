{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "pretty": true,
    "strict": true,
    "types": ["node"],
    "paths": {
      "*": ["src/*"],
      "tests": ["tests/*"],
      "@assets/*": ["assets/"],
      "@components/*": ["src/Components/*"]
    }
  }
}
